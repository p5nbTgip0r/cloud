<configuration>

    <appender class="ch.qos.logback.core.ConsoleAppender" name="console">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} %msg%n</pattern>
        </encoder>
        <target>System.out</target>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>
